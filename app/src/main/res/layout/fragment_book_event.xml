<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/white"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:id="@+id/bookEvent"
    tools:context=".Fragment.BookEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <EditText
            android:id="@+id/event_first_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:hint="First Name"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/event_last_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:hint="Last Name"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/event_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:hint="Address"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/event_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="@dimen/textSize" />

        <Spinner
            android:id="@+id/event_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:textSize="@dimen/textSize"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/showPopup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="@string/event_type"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:focusable="false"
            android:drawableRight="@drawable/down_arrow_f"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text"
            android:drawableRight="@drawable/calendar"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Add Event"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="Number Of Guests"
            android:textSize="@dimen/textSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.1"
                android:text="0" />

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.8"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.1"
                android:text="0"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_shape"
            android:text="Send Request"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize" />

    </LinearLayout>
</ScrollView>